<?xml version="1.0" encoding="utf-8"?><!--实时榜弹出框-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/dimen_74_dip"
        android:orientation="vertical">
        <LinearLayout
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/tv_send_to_who"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/tv_send_to_song_name"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView
            android:layout_width="@dimen/dimen_250_dip"
            android:layout_height="@dimen/dimen_74_dip"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/dialog_real_time_icon" />

        <RelativeLayout
            android:layout_marginLeft="@dimen/dimen_20_dip"
            android:background="#ffffff"
            android:layout_marginRight="@dimen/dimen_20_dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/dimen_5_dip"
                android:background="@drawable/dialog_real_time_close" />

            <ListView
                android:id="@+id/dialog_real_time_lv"
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:layout_below="@+id/close"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:divider="@null" />

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
